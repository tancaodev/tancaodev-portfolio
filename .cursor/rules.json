{
    "editor": {
        "formatOnSave": true,
        "formatOnPaste": true,
        "formatOnType": true,
        "defaultFormatter": "prettier",
        "tabSize": 2,
        "insertSpaces": true,
        "wordWrap": "on",
        "rulers": [80, 100],
        "trimTrailingWhitespace": true,
        "insertFinalNewline": true,
        "trimFinalNewlines": true
    },
    "files": {
        "exclude": {
            "**/.git": true,
            "**/.svn": true,
            "**/.hg": true,
            "**/CVS": true,
            "**/.DS_Store": true,
            "**/Thumbs.db": true,
            "**/node_modules": true,
            "**/dist": true,
            "**/.next": true,
            "**/build": true
        },
        "associations": {
            "*.tsx": "typescriptreact",
            "*.ts": "typescript",
            "*.jsx": "javascriptreact",
            "*.js": "javascript",
            "*.css": "css",
            "*.json": "json",
            "*.md": "markdown"
        }
    },
    "typescript": {
        "preferences": {
            "importModuleSpecifier": "non-relative",
            "quoteStyle": "single"
        }
    },
    "javascript": {
        "preferences": {
            "importModuleSpecifier": "non-relative",
            "quoteStyle": "single"
        }
    },
    "emmet": {
        "includeLanguages": {
            "javascript": "javascriptreact",
            "typescript": "typescriptreact"
        }
    },
    "terminal": {
        "integrated": {
            "shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
            "shell.linux": "/bin/bash",
            "shell.osx": "/bin/bash"
        }
    },
    "workbench": {
        "colorTheme": "Default Dark+",
        "iconTheme": "vs-seti",
        "startupEditor": "newUntitledFile",
        "editorAssociations": {
            "*.tsx": "typescriptreact",
            "*.ts": "typescript",
            "*.jsx": "javascriptreact",
            "*.js": "javascript"
        }
    },
    "git": {
        "enableSmartCommit": true,
        "confirmSync": false,
        "autofetch": true
    },
    "search": {
        "exclude": {
            "**/node_modules": true,
            "**/dist": true,
            "**/.next": true,
            "**/build": true
        }
    },
    "commands": {
        "autoRun": {
            "npm": {
                "run": {
                    "dev": false,
                    "test": false,
                    "build": false,
                    "start": false,
                    "lint": false
                },
                "install": false,
                "uninstall": false,
                "update": false
            }
        }
    }
} 